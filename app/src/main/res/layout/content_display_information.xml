<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ankur.pollutionandweathermonitor.DisplayInformation"
    tools:showIn="@layout/activity_display_information">
<!-- LinearLayout1 is for the top. It contains the facebook login and auto complete -->
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_red_900"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/LinearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#757575"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/home"/>

                />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:tint="#55ff0000"
                    android:src="@drawable/home"/>

                />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:tint="#55ff0000"
                    android:src="@drawable/home"/>

                />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:tint="#55ff0000"
                    android:src="@drawable/home"/>

                />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFF88"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/md_red_900"
                android:textSize="20dp"
                android:id="@+id/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPERATURE"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textColor="@color/md_red_900"
                android:textSize="20dp"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POLLUTANTS"
                android:textStyle="bold"
                android:textColor="@color/md_red_900"
                android:textSize="20dp"
                android:id="@+id/textView3" />
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.ankur.pollutionandweathermonitor.DisplayInformation" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
